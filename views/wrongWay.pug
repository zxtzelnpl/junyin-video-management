doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(rel="stylesheet",href="/css/normalize.css")
        style.
            .content{
                margin:0 auto;
                width:400px;
                border:1px solid gray;
            }
            .title{
                margin:0 auto;
                width:300px;
                text-align: left;
            }
            .text{
                margin:10px auto;
                width:300px;
                font-size:24px;
                text-align:center;
                font-weight:bold;
            }

    body
        .content
            div.title
                | #{title}
                | :
            div.text
                | #{err}
